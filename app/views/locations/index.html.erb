<h2>Listing locations</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Route</th>
    <th>Address</th>
    <th>Start</th>
    <th>Finish</th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to (location.name.present? ? location.name : "location"), location %></td>
    <td><%= location.route.name %></td>
    <td><%= location.address_string %></td>
    <td><%= location.start %></td>
    <td><%= location.finish %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Location', new_location_path, :class => "btn btn-inverse" %>
