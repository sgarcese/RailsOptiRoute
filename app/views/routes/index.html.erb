<h2>Listing routes</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Optimized</th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= link_to route.name, route %></td>
    <td><%= route.optimized %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a Route', new_route_path, :class => "btn btn-inverse" %>